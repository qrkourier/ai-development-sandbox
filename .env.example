# ============================================================
# Workspace Agent - Environment Configuration
# Copy to .env and fill in values. Never commit .env.
# ============================================================

# --- TLS Mode ---
# dns    = ACME DNS-01 via Cloudflare (production, requires DOMAIN + CLOUDFLARE_API_TOKEN)
# local  = tls internal, self-signed certs on localhost (bootstrapping, no DNS needed)
TLS_MODE=local

# --- Domain (DNS mode only) ---
DOMAIN=workspace.local

# --- HTTPS Port ---
# Caddy listens on this port for HTTPS. Default: 8443. Set to 443 for standard HTTPS.
HTTPS_PORT=8443

# --- Cloudflare (DNS mode only) ---
CLOUDFLARE_API_TOKEN=

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme-postgres-root

# Database-specific credentials (created by init script)
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=changeme-keycloak-db
MATTERMOST_DB_USER=mattermost
MATTERMOST_DB_PASSWORD=changeme-mattermost-db
WIKIJS_DB_USER=wikijs
WIKIJS_DB_PASSWORD=changeme-wikijs-db

# --- Keycloak ---
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme-keycloak-admin

# --- Mattermost ---
MM_SQLSETTINGS_DATASOURCE=postgres://mattermost:changeme-mattermost-db@postgres:5432/mattermost?sslmode=disable
MM_BOT_TOKEN=

# --- API Keys ---
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# --- LiteLLM ---
LITELLM_MASTER_KEY=changeme-litellm-master

# --- OpenZiti (optional) ---
# Provide a JWT enrollment token to enable secure remote access.
# Leave empty to skip ziti-host service.
ZITI_ENROLL_TOKEN=

# --- Ollama ---
# Override auto-detected model (leave empty for auto-selection)
OLLAMA_MODEL_OVERRIDE=

# --- Harness ---
# Mattermost WebSocket URL (usually ws://mattermost:8065)
MM_WS_URL=ws://mattermost:8065
MM_API_URL=http://mattermost:8065
